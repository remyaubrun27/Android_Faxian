<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.faxianchina.faxian.Frag_Battle">


    <TextView
        android:id="@+id/cityLabel"
        android:layout_width="246dp"
        android:layout_height="48dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="93dp"
        android:gravity="center"
        android:text="Linzi"
        android:textAppearance="@style/TextAppearance.AppCompat.Display1"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/attack"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="42dp"
        android:layout_marginRight="42dp"
        android:text="Attack"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/cityLabel"
        app:layout_constraintVertical_bias="0.63"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintHorizontal_bias="0.58" />

    <LinearLayout
        android:id="@+id/enemy"
        android:layout_width="155dp"
        android:layout_height="160dp"
        android:layout_marginLeft="8dp"
        android:layout_marginRight="25dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toRightOf="@+id/yourArmy"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="16dp">

        <TextView
            android:id="@+id/enemyArchers"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Archers" />

        <TextView
            android:id="@+id/enemySwordsmen"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Swordsmen" />

        <TextView
            android:id="@+id/enemySpearmen"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Spearmen" />

        <TextView
            android:id="@+id/enemyCavalry"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Cavalry" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/yourArmy"
        android:layout_width="155dp"
        android:layout_height="160dp"
        android:layout_marginLeft="33dp"
        android:layout_marginStart="33dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.498">

        <TextView
            android:id="@+id/yourArchers"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Archers" />

        <TextView
            android:id="@+id/yourSwordsmen"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Swordsmen" />

        <TextView
            android:id="@+id/yourSpearmen"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Spearmen" />

        <TextView
            android:id="@+id/yourCavalry"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Cavalry" />


    </LinearLayout>

    <TextView
        android:id="@+id/yourArmyLabel"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="9dp"
        android:layout_marginEnd="8dp"
        android:layout_marginLeft="69dp"
        android:layout_marginRight="8dp"
        android:layout_marginStart="69dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        app:layout_constraintBottom_toTopOf="@+id/yourArmy"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/enemyArmyLabel" />

    <TextView
        android:id="@+id/enemyArmyLabel"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_marginBottom="4dp"
        android:layout_marginEnd="50dp"
        android:layout_marginRight="80dp"
        android:textAppearance="@style/TextAppearance.AppCompat.Button"
        app:layout_constraintBottom_toTopOf="@+id/enemy"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>